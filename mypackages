#!/bin/bash

pacstrap /mnt base linux-lts linux-lts-headers linux-firmware vim amd-ucode lvm2

ln -sf /usr/share/zoneinfo/America/Los_Angeles /etc/localtime
hwclock --systohc
sed -i '178s/.//' /etc/locale.gen
locale-gen
echo "LANG=en_US.UTF-8" >> /etc/locale.conf
echo "mobile" >> /etc/hostname
echo "127.0.0.1 localhost" >> /etc/hosts
echo "::1       localhost" >> /etc/hosts
echo "127.0.1.1 arch.localdomain mobile" >> /etc/hosts


useradd -m drew
echo "drew ALL=(ALL) ALL" >> /etc/sudoers.d/drew

#pacman -S grub efibootmgr networkmanager network-manager-applet wireless_tools wpa_supplicant dialog os-prober mtools dosfstools base-devel git bluez bluez-utils cups xdg-utils xdg-user-dirs openssh xorg i3-wm terminator firefox polybar rofi numlockx sxhkd xf86-video-amdgpu terminal-fonts awesome-terminal-fonts ttf-font-awesome scrot vlc

systemctl enable NetworkManager
systemctl enable bluetooth
systemctl enable cups.service

grub-install --target=x86_64-efi --efi-directory=/boot --bootloader-id=GRUB 
#change the directory to /boot/efi is you mounted the EFI partition at /boot/efi

grub-mkconfig -o /boot/grub/grub.cfg

#pacman -S -- as-needed arandr autotilng brightnessctl btop cairo cmake conky dunst engrampa feh firefox gedit gimp gnome-keyring gnome-mahjongg gufw gvfs gvfs-gphoto2 gvfs-smb haveged hplip lib32-mesa libimobiledevice libreoffice libxnvctrl lutris lxappearance man-db man-pages mesa mpd mpv neovim okular pacman-contrib pcmanfm picom redshift ripgrep samba system-config-printer tlp tlp-rdw tmux transmission-gtk unarchiver vlc vulkan-radeon wine wine-gecko wine-mono winetricks xf86-video-vesa timeshift

#yay -S brave-browser bluetuith imlib pandoc-bin ponymix siji-git slimbook-battery 

xdg-utils acpi alsa-utils bluedevil blueman bluez bluez-hid2hci bluez-utils cups dialog dkms dosfstools exfat-utils expac fuse2 fuse3 wireless_tools wmctrl xbacklight mtools ncdu os-prober xsel pulseaudio-bluetooth ntfs-3g ifuse pavucontrol pamixer playerctl 

